{
  "compilerOptions": {
    "target": "ES2020",          // Target ECMAScript version
    "module": "commonjs",        // Module system to use
    "outDir": "./dist",          // Directory to output compiled files
    "rootDir": "./src",          // Directory with TypeScript source files
    "strict": true,              // Enable all strict type-checking options
    "esModuleInterop": true      // Enable interoperability between CommonJS and ES Modules
  },
  "include": ["src/**/*.ts"],    // Files to include in the compilation
  "exclude": ["node_modules"]    // Files to exclude from the compilation
}
